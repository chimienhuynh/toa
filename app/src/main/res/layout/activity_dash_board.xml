<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DashBoardActivity">

    <TextView
        android:id="@+id/dash_board_title_jj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/project_dashboard_title"
        android:textAlignment="center"
        android:textColor="#B4950D"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/dash_board_button_bar1_jj"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dash_board_title_jj">

        <Button
            android:id="@+id/imageButton1_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/pdb_b_button_1_1"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/imageButton2_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/pdb_b_button_1_2"
            android:textAllCaps="false"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dash_board_button_bar2_jj"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dash_board_button_bar1_jj">

        <Button
            android:id="@+id/imageButton3_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/pdb_b_button_2_1"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/imageButton4_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/pdb_b_button_2_2"
            android:textAllCaps="false"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dash_board_button_bar3_jj"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dash_board_button_bar2_jj">

        <Button
            android:id="@+id/imageButton5_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/pdb_b_button_3_1"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/imageButton6_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/pdb_b_button_3_2"
            android:textAllCaps="false"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dash_board_button_bar4_jj"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dash_board_button_bar3_jj">

        <Button
            android:id="@+id/imageButton7_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/pdb_b_button_4_1"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/imageButton8_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/pdb_b_button_4_2"
            android:textAllCaps="false"
            android:textSize="12sp" />
    </LinearLayout>

        <Button
            android:id="@+id/imageButton_edit_profile_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/pdb_b_button_edp"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/imageButton_home_page_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:drawableBottom="@drawable/toa_48"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/imageButton_view_past_project_pdb_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:drawableEnd="@drawable/pdb_b_button_vpp"
            android:textAllCaps="false"
            android:textSize="12sp" />

</RelativeLayout>
